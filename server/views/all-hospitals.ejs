<div class="row right_col">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>All Emergencies <small>List of accidents/emergencies served</small></h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <p class="text-muted font-13 m-b-30">
          All hospitals in app
          </p>          
          <table id="datatable" class="table table-striped table-bordered">
            <thead>
              <tr>
              <th>Name</th>
                <th>Location</th>
                <th>Contact</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i=0;i< hospitals.length;i++ ){ %>
                    <tr>
                    <td><%=hospitals[i].hospital_name %></td>
                        <td><%=hospitals[i].hospital_location.latitude %>,<%=hospitals[i].hospital_location.longitude %> </td>
                        <td><%=hospitals[i].hospital_contact %></td>
                    </tr>
                <% } %>
            </tbody>
          </table>
          <ul class="pagination" total="5"></ul>
        </div>
      </div>
    </div>
