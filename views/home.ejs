<%- include("./partials/header") %>
<!-- Page Content-->

<body class="nav-md">
<%- include("./partials/navigation") %>
<div class="row right_col">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>All Emergencies <small>List of accidents/emergencies served</small></h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <p class="text-muted font-13 m-b-30">
          Emergency services available
          </p>          
          <table id="datatable" class="table table-striped table-bordered">
            <thead>
              <tr>
              <th>Emergency Id</th>
                <th>Injury Type</th>
                <th>Info From</th>
                <th>Picture</th>
                <th>Location</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i=0;i< cases.length;i++ ){ %>
                    <tr>
                    <td><%=cases[i]._id %></td>
                        <td><%=cases[i].injury %></td>
                        <td><%=cases[i].informer %></td>
                        <td><img height="250px" width="250px" src="<%=cases[i].picture %>"/> </td>
                        <td><%=cases[i].accident_location %>
                          <br><br>
                        <a target="_blank" href="https://www.google.com/maps/?q=<%=cases[i].location.latitude%>,<%=cases[i].location.longitude%>" class="btn btn-primary">View On Map</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
          </table>
          <ul class="pagination" total="5"></ul>
        </div>
      </div>
    </div>
  <!--End of page content -->
  <%- include("./partials/footer") %>